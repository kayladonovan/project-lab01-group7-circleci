<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54B3E5FC"
    tools:context=".ClinicHours">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Set Clinic Hours"
            android:textAllCaps="true"
            android:textColor="#E21F83B1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/notice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Please enter the clinic's hours in the 24 hour format (ie. HH:MM)."
            android:textSize="11sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/notice5"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="In the case the clinic is to be closed on certain day, please enter &quot;closed&quot; in both time slots of that day."
            android:textSize="11sp"
            android:textStyle="italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/mondaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mon"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Monday" />

            <EditText
                android:id="@+id/startTime1"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime1"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/tuesdaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tue"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Tuesday" />

            <EditText
                android:id="@+id/startTime2"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime2"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center|center_horizontal"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/wednesdaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wed"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Wednesday" />

            <EditText
                android:id="@+id/startTime3"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime3"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center|center_horizontal"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/thursdaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thurs"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Thursday" />

            <EditText
                android:id="@+id/startTime4"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime4"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center|center_horizontal"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/fridaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fri"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Friday" />

            <EditText
                android:id="@+id/startTime5"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime5"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center|center_horizontal"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/saturdaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sat"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Saturday" />

            <EditText
                android:id="@+id/startTime6"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime6"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center|center_horizontal"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/sundaySlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sun"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Sunday" />

            <EditText
                android:id="@+id/startTime7"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:hint="From"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/endTime7"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center|center_horizontal"
                android:hint="Until"
                android:imeOptions="actionDone"
                android:inputType="text|time"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/setBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:text="set times" />

        <Button
            android:id="@+id/cancelBtn4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@android:string/cancel"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>